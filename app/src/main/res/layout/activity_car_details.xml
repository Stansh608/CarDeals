<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"

        android:background="@drawable/backgroundview"
        tools:context=".CarDetails">
        <ScrollView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="visible"
            android:paddingVertical="@dimen/cardview_default_elevation">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"

                    android:layout_height="262dp"
                    android:layout_marginLeft="2dp"

                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:background="#5A5A5A"
                    android:focusedByDefault="true"
                    app:shapeAppearance="@style/circular_disp" />
                <View
                    android:layout_width="match_parent"


                    android:layout_height="2dp"
                    android:background="#3F51B5"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginTop="0dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="150dp"
                    android:layout_marginRight="0dp"

                    android:paddingTop="0dp"
                    android:id="@+id/tvyear"

                    android:textStyle="bold|normal"
                    android:textColor="#F44336"
                    />


                <TextView
                    android:id="@+id/tvmake"
                    android:layout_width="300dp"
                    android:layout_height="40dp"

                    android:layout_marginBottom="20dp"

                    android:paddingStart="3dp"
                    android:paddingEnd="30dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"

                    android:textSize="30dp"
                    android:textStyle="bold|normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"

                        android:text="Engine"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvengine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"
                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"


                        android:text="Kilometres"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Wheels"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvwheels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Color"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Interior"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvinterior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Gearbox"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvgear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Seats"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvseats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Cylinders"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvcylinders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="20dp"

                        android:paddingStart="5dp"
                        android:paddingTop="0dp"

                        android:text="Airbags"

                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvairbags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"

                        android:paddingStart="10dp"
                        android:paddingEnd="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:textAlignment="center"

                        android:textStyle="bold|normal"
                        android:textColor="@color/black"

                        />

                </LinearLayout>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="55dp"

                    android:layout_marginBottom="20dp"

                    android:paddingStart="3dp"
                    android:paddingEnd="30dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:text="Description"
                    android:background="@drawable/backgroundview"
                    android:textStyle="bold|normal" />
                <TextView
                    android:id="@+id/tvdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="0dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"

                    android:paddingStart="10dp"
                    android:paddingEnd="30dp"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="0dp"
                    android:textAlignment="center"

                    android:textStyle="bold|normal"
                    android:textColor="#F44336"

                    />


                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="396dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="15dp"
                    android:text="Buy"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="20dp"
                    app:backgroundTint="@null" />

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</layout>